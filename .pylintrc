# File to describe the pylint rules

[MASTER]
# call the pylint_init.py file so pylint is aware of the bricks
init-hook="import imp, os;imp.load_source('pylint_init', '/lab/user/pylint_init.py')"
disable=
    missing-function-docstring,
    missing-module-docstring,
    missing-class-docstring,

    no-else-raise,
    no-else-return,

    too-many-arguments,
    too-many-instance-attributes,
    too-many-locals,
    too-many-public-methods,
    too-few-public-methods,

    bare-except,
    raise-missing-from

# White list pydantic to prevent warnings on imports 
# https://github.com/samuelcolvin/pydantic/issues/1961#issuecomment-759522422
extension-pkg-whitelist=pydantic


[FORMAT]
max-line-length=200